<%- include('./partials/head') %>

    <h1><%= title %></h1>
    <p>Enter the secret code for private access!</p>
    <form method='post'>
      <div class='form-input'>
        <label for='private_access'>Access Code: </label>
        <input type='password' name='private_access' id='private_access'>
      </div>

      <% if (typeof errors !== 'undefined') { %>
       <% errors.forEach(error => { %>
        <p><%= error.msg %></p>
       <% }) %>
      <% } %>

      <div class='form-buttons'>
        <button type='submit'>Login</button>
      </div>
    </form>

<%- include('./partials/footer') %>