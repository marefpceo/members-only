<%- include('./partials/head') %>

  <h1>Create New Message</h1>

  <form method='post'>
    <div>
      <label for='message_title'>Title:</label>
      <input type='text' name='message_title' id='message_title' required autofocus
       value='<%= typeof message === 'undefined' ? '' : message.message_title %>'>
    </div>
    
    <div>
      <label for='message_text'>Message:</label>
      <input type='text' name='message_text' id='message_text'
        value='<%= typeof message === 'undefined' ? '' : message.message_title %>'>
    </div>

    <div class='button-div'>
      <button type='submit'>Submit</button>
      <button type='button'>Cancel</button>
    </div>
  </form>

  <ul>
    <% if (typeof errors !== 'undefined') { %>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    <% } %>
  </ul>  

<%- include('./partials/footer') %>