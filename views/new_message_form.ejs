<%- include('./partials/head') %>
<%- include('./partials/header') %>
<%- include('./partials/aside') %>

  <div class='new-message'>
    <h1>Create New Message</h1>
    <form method='post'>
      <div class='form-input'>
        <label for='message_title'>Title:</label>
        <input type='text' name='message_title' id='message_title' required autofocus
         value='<%= typeof message === 'undefined' ? '' : message.message_title %>'>
      </div>
    
      <div class='form-input'>
        <label for='message_text'>Message:</label>
        <textarea type='text' name='message_text' id='message_text'
          value='<%= typeof message === 'undefined' ? '' : message.message_title %>'></textarea>
      </div>
      <div class='form-buttons'>
        <button type='submit'>Submit</button>
        <a href='/'><button type='button'>Cancel</button></a>
      </div>
    </form>
  </div>

  <ul>
    <% if (typeof errors !== 'undefined') { %>
      <% errors.forEach(error => { %>
        <li><%= error.msg %></li>
      <% }) %>
    <% } %>
  </ul>  

<%- include('./partials/footer') %>